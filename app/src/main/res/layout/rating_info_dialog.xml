<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="BP Gas Station"
        android:ems="10"
        android:id="@+id/tvLocationName"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"/>
    <Button
        android:text="@string/rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/btnRate"
        style="@style/Widget.AppCompat.Button.Colored" android:elevation="0dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/rbLocationRating" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/rbLocationRating"
        android:numStars="5" android:stepSize=".5" style="@style/Widget.AppCompat.RatingBar"
        android:isIndicator="false" android:layout_gravity="center_horizontal"
        android:layout_below="@+id/tvLocationName" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="(42)"
        android:ems="10"
        android:id="@+id/tvNumberRatings"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_above="@+id/btnRate" android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" android:layout_marginBottom="17dp"
        android:layout_toRightOf="@+id/rbLocationRating"
        android:layout_toEndOf="@+id/rbLocationRating" android:layout_marginLeft="15dp"/>
</RelativeLayout>